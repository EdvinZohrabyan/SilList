@model SO.SilList.Manager.Models.ViewModels.BusinessVm
 

<form id="filterForm">

    @Html.HiddenFor(model => model.paging.pageNumber)

    <label>Keyword:</label>
    @Html.ValidationSummary(true)
    @Html.TextBoxFor(model => model.keyword,new { Class = "input-large", placeholder =  "Keyword", style="width:90%"})
    @Html.ValidationMessageFor(model => model.keyword)

    <label>City, State or Zip:</label>
    @Html.ValidationSummary(true)
    <input type="text" style="width: 90%;" class="input-large" placeholder="Location">
    @Html.ValidationMessageFor(model => model.result)

<br /><br />

 @Html.HiddenFor(model=> model.paging.pageNumber)

<button name="submitButton" value="Search" type="submit" class="btn btn-success pull-right">Search</button>

 
 </form>


