@if (Request.IsAuthenticated) {
   
     <ul class="nav nav-pills pull-right">

     <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> @User.Identity.Name<b class="caret white-caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Settings</a></li>
                  <li><a href="#">My Clubs</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Logout</a></li>
                </ul>
     </li>
         </ul>
    
} else {
  
    
       <form class="navbar-form pull-right" method="post" action="@Url.Action("Login","Member",null)">
              <input id="email" name="email" class="span2" type="text" placeholder="Email" required="required"> 
              <input  id="password" name="password" class="span2" type="password" placeholder="Password" required>
              <button type="submit" class="btn">Sign in</button>
       </form>
    
}
