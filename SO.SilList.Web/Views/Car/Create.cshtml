@model SO.SilList.Manager.Models.ValueObjects.CarVo

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutCar.cshtml";
}
<style>
    .info {
        padding: 1px;
        border-radius: 6px;
    }
</style>



<div class="row" style="margin-left: 5px;">
    <div class="span8">
        <img class="media-object, thumbnail" data-src="holder.js/440x300">
    </div>
    <div class="span4" style="border: groove; border-color: #808080; border-radius: 6px; height: 300px; margin-top: 5px;">

        <div class="span6" style="margin-left: 5px; margin-top: 4px">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
        </div>
        <div class="span6" style="margin-top: 4px; margin-left: -2px">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
            <img class="media-object, thumbnail" data-src="holder.js/85x85">
        </div>
    </div>
</div>
<div class="row" style="margin: 5px;">
    <div class="span8">
        <h2 style="color: #090f4a; text-shadow: 5px 3px 2px #a3a3a4">@Html.DisplayFor(model => model.year) @Html.DisplayFor(model => model.modelType.makeType.name) @Html.DisplayFor(model => model.modelType.name)</h2>
    </div>
    <div class="span4" style="text-align: center;">
        Price: 
        @Html.EditorFor(model => model.price)
    </div>
</div>
<div class="row" style="height: 400px; margin: 5px;">
    <div class="span8" style="height: 400px; border-radius: 6px;">
        <div style="border: inset; border-color: #808080; height: 120px; border-radius: 6px; margin-bottom: 5px">
            <b style="font-size: medium; font-style: italic; margin: 10px; padding: 5px; border-bottom: 1px solid #ccc;">Location</b>

            <div style="margin: 5px; height: 60px; margin-left: 30px">
                <div style="height: 40px;">
                    <b>Address:</b>
                    @Html.EditorFor(model => model.address)
                    @Html.EditorFor(model => model.cityType.name)
                    @if (Model.cityType != null)
                    { <b>,</b>}
                    @Html.DisplayFor(model => model.stateType.stateCode)
                </div>
                <div>
                    <b>Zip Code:</b>
                    @Html.EditorFor(model => model.zip)
                </div>
            </div>
            <div>
                <div class="span5" style="margin-left: 30px">
                    <b>Phone:</b>
                    @Html.EditorFor(model => model.phone)
                </div>
                <div class="span5">
                    <b>Fax:</b>
                    @Html.EditorFor(model => model.fax)
                </div>
            </div>

        </div>
        <div style="border: inset; border-color: #808080; height: 270px; border-radius: 6px; margin-bottom: 5px">
            <b style="font-size: medium; font-style: italic; margin: 10px; padding: 5px; border-bottom: 1px solid #ccc;">Description</b>
            <div style="margin: 5px; margin-left: 10px">
                <p>
                    @Html.TextAreaFor(model => model.description)
                </p>
            </div>
        </div>
        <div style="border: inset; border-color: #808080; height: 30px; border-radius: 6px; padding: 10px;">
            <input type="button" value="Back" class="btn btn-info" onclick="history.go(-1); return true;">
            <a href="#" class="btn btn-primary pull-right" style="margin-left: 10px">Contact</a>
            <a href="#" class="btn btn-warning pull-right">Save</a>
        </div>
    </div>
    <div class="span4" style="border: inset; border-color: #808080; height: 470px; border-radius: 6px; padding: 10px;">
        <b>Millage:</b>
        <div class="info">@Html.EditorFor(model => model.millage)</div>
        <b>Body:</b>
        <div class="info">@Html.EditorFor(model => model.carBodyType.name)</div>
        <b>Trasmission:</b>
        <div class="info">@Html.EditorFor(model => model.transmissionType.name)</div>
        <b>Fuel:</b>
        <div class="info">@Html.EditorFor(model => model.carFuelType.name)</div>
        <b>Drive:</b>
        <div class="info">@Html.EditorFor(model => model.carDriveType.name)</div>
        <b>Engine:</b>
        <div class="info">@Html.EditorFor(model => model.carEngineType.name)</div>
        <b>Door:</b>
        <div class="info">@Html.EditorFor(model => model.carDoorType.name)</div>
        <b>Exterior Color:</b>
        <div class="info">@Html.EditorFor(model => model.exteriorColorType.name)</div>
        <b>Interior Color:</b>
        <div class="info">@Html.EditorFor(model => model.interiorColorType.name)</div>
        <b>Vin:</b>
        <div class="info">@Html.EditorFor(model => model.vin)</div>

    </div>
</div>
