@model SO.SilList.Manager.Models.ValueObjects.JobVo
@using SO.SilList.Manager.Models.ValueObjects
@using SO.SilList.Manager.Managers

@{
    ViewBag.Title = "Submit Job Listing";
    Layout = "~/Views/Shared/_LayoutJob.cshtml";
}
<style>
    .info {
        padding: 2px;
        margin-bottom: 2px;
    }

    #sidePanel INPUT {
        width: 176px;
    }

    #sidePanel SELECT {
        width: 190px;
    }

    #jobCategoryTypeId {
        width: 520px;
        border-radius: 10px;
    }
</style>
<script>
    window.onload = function () {
        var n = @Html.Raw(Json.Encode(Model.jobCategoryType))
                $("#jobCategoryType").val(n).select2({
                    //dropdownAutoWidth: false,
                    width: '520',
                });
        
            };
</script>
@using (Html.BeginForm("Create", "Jobs", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    <div class="span12">
      
            @Html.ValidationSummary()
      
    </div>
    <div class="row" style="margin: 5px;">
        <div class="span12" style="margin-left: 45px">
            <b>Job Title: </b>@Html.EditorFor(model => model.title)
            <b style="margin-left: 7px">Job Type: </b>
            @Html.Action("DropDownList", new { id = Model.jobTypeId, propertyName = "jobTypeId", modelType = typeof(JobTypeVo) })
        </div>
        <div class="span12" style="margin-left: -2px;">
            <b>Company name: </b>@Html.EditorFor(model => model.companyName)
            <b style="margin-left: 15px">Website: </b>@Html.EditorFor(model => model.website)
        </div>
        <b style="margin-left: 5px">Job categories: </b>
        @Html.Action("DropDownList", new { id = Model.jobCategoryType, propertyName = "jobCategoryType", modelType = typeof(JobCategoryTypeVo) })

    </div>

    <div class="row" style="height: 460px; margin: 5px;">

        <div class="span8" style="border: inset; border-color: #808080; height: 400px; border-radius: 6px; margin-bottom: 5px">
            <b style="font-size: medium; font-style: italic; margin: 10px; padding: 10px; border-bottom: 1px solid #ccc;">Job Description</b>
            <div style="margin: 10px;">
                <p style="text-align: justify">
                    @Html.TextAreaFor(model => model.description, new { rows = 18, style = "width:395px" })
                </p>
            </div>
            <div class="info span5">
                <b>Is Telecomute: </b>
                @Html.EditorFor(model => model.isTelecomute)
            </div>
            <div class="info span5">
                <b>Is Travel Required: </b>
                @Html.EditorFor(model => model.isTravelRequired)
            </div>
        </div>

        <div class="span4" style="border: inset; border-color: #808080; height: 400px; border-radius: 6px; margin-bottom: 5px; padding: 5px">
            <b style="font-size: medium; font-style: italic; margin: 10px; padding: 10px; border-bottom: 1px solid #ccc;">Contact</b>
            <div id="sidePanel" style="margin-top: 10px">
                <div class="info">
                    <b>Contact Name:</b><br />
                    @Html.EditorFor(model => model.contactName)
                </div>
                <div class="info">
                    <b>Location:</b><br />
                    @Html.TextBoxFor(model => model.address, new { placeholder = "Address" })
                </div>
                <div class="info">
                    @Html.Action("DropDownList", new { id = Model.cityTypeId, propertyName = "cityTypeId", defaultValue = "City, State", modelType = typeof(CityTypeVo) })

                    <b>Zip Code:</b>
                    @Html.TextBoxFor(model => model.zip, new { placeholder = "Zip Code" })

                </div>

                <div class="info">
                    <b>Phone:</b>
                    @Html.TextBoxFor(model => model.phone, new { placeholder = "(777) 777-7777" })
                </div>
                <div class="info">
                    <b>Fax:</b>
                    @Html.TextBoxFor(model => model.fax, new { placeholder = "(777) 777-7777" })
                </div>

            </div>
        </div>
        <div class="span12" style="border: inset; border-color: #808080; height: 55px; border-radius: 6px; padding: 10px; margin-left: -1px">
            <b>Primary Email:</b><input type="email" readonly style="width:160px" value="@CurrentMember.member.email" />
            <b style="margin-left:30px">Alternate Email:</b>@Html.TextBoxFor(model => model.email)
        </div>
        <div class="span12" style="margin-top: 5px; border: inset; border-color: #808080; height: 55px; border-radius: 6px; padding: 10px; margin-left: -1px">
            <a type="button"  class="btn btn-info " href="@Url.Action("Index")">Cancel</a>
            <button type="submit" class="btn btn-primary pull-right" style="margin-left: 10px">Save</button>

        </div>

    </div>
}

