@model SO.SilList.Manager.Models.ViewModels.PropertyVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutProperty.cshtml";
}

<h3>Your Search Result</h3>

<div style="height:20px">  
    <div class="pull-right" >
        @((Model.paging.pageNumber - 1) * Model.paging.rowCount + Model.result.Count) of @Model.paging.totalCount
    </div>
    </div>
<hr />

<ul class="media-list">
    @{
        
    if (Model.result.Count == 0)
    {
        <div class="businessAddressLine"> <b><i>No Match was Found</i></b></div>
    }
    else
    {
        foreach (var item in Model.result)
        {
            <li class="row, media" style="border-bottom: 1px solid #ccc;">

                @Html.Partial("_PropertyItem", item)

            </li>  
        }
        }
    }
</ul>
@Html.Action("Pagination", @Model.paging)

