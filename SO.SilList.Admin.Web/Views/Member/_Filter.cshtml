@model SO.SilList.Manager.Models.ViewModels.MemberVm

<style>
    #isActive {
        width: 90px;
    }
</style>

@Html.ValidationSummary(true)
@Html.ValidationMessageFor(model => model.keyword)

@Html.TextBoxFor(model => model.keyword, new { @class = "input-large", placeholder = "Search" })

<label class="checkbox" style="margin-left: 10px;">
    @Html.LabelFor(model => model.filterIsActive)
    @Html.EditorFor(model => model.filterIsActive)
</label>

<button name="submitButton" value="Search" type="submit" class="btn">Search</button>