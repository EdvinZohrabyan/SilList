@model SO.SilList.Manager.Models.ViewModels.RentalVm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Rental", FormMethod.Post, new { @encType = "multipart/form-data", id = "myForm" }))
{
    
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RentalVo</legend>

        @Html.HiddenFor(model => model.rental.rentalId)

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.title)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.rental.title)
            @Html.ValidationMessageFor(model => model.rental.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.description)
            @Html.ValidationMessageFor(model => model.rental.description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.propertyTypeId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.propertyTypeId)
            @Html.ValidationMessageFor(model => model.rental.propertyTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.siteId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.siteId)
            @Html.ValidationMessageFor(model => model.rental.siteId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.bedrooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.bedrooms)
            @Html.ValidationMessageFor(model => model.rental.bedrooms)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.bathrooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.bathrooms)
            @Html.ValidationMessageFor(model => model.rental.bathrooms)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.rent)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.rent)
            @Html.ValidationMessageFor(model => model.rental.rent)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.leaseTermTypeId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.leaseTermTypeId)
            @Html.ValidationMessageFor(model => model.rental.leaseTermTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.size)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.size)
            @Html.ValidationMessageFor(model => model.rental.size)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.lotSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.lotSize)
            @Html.ValidationMessageFor(model => model.rental.lotSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.rental.acceptsSection8)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rental.acceptsSection8)
            @Html.ValidationMessageFor(model => model.rental.acceptsSection8)
